<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tarefas.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tarefas.Web.styles.css" asp-append-version="true" />

    <!-- Custom styles for this template -->

</head>
<body class="vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 px-5 justify-content-between">
            
            
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tarefas.Web</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item px-2">
                        <a class="nav-link text-dark btn border border-primary rounded-pill" asp-area="" asp-controller="Tarefa" asp-action="Index">Tarefas</a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link text-light btn btn-primary rounded-pill" asp-area="" asp-controller="Tarefa" asp-action="Create">Criar Tarefa</a>
                    </li>
                </ul>
            </div>
            
        
        </nav>
    </header>
    <div class="h-100">
        <main class="h-100" role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>