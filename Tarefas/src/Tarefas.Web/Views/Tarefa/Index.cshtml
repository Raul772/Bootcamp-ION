@model IEnumerable<Tarefas.Web.Models.TarefaViewModel>


<style>
    th,td{
            padding-top: 1px;
        }
</style>

<table class="col-md-8 mx-auto">
    <thead class="border-bottom">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Concluida)</th>
            <th>Ações</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.Concluida</td>
                <td style="padding: 0px;"><a class="btn btn-primary rounded-pill" asp-controller="Tarefa" asp-action="Details" asp-route-id="@item.Id">Detalhes</a></td>
                <td style="padding: 0px;"><a class="btn btn-primary rounded-pill" asp-controller="Tarefa" asp-action="Update" asp-route-id="@item.Id">Editar</a></td>
                <td style="padding: 0px;"><a class="btn btn-primary rounded-pill" asp-controller="Tarefa" asp-action="Delete" asp-route-id="@item.Id">Remover</a></td>
            </tr>
        }
    </tbody>
</table>

