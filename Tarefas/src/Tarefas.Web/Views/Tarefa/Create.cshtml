@model Tarefas.Web.Models.TarefaViewModel

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<form class="col-md-6 mx-auto" asp-action="Create">

    <div class="form-group">
        <label asp-for="Titulo">@Html.DisplayNameFor(model => model.Titulo)</label>
        @Html.TextBoxFor(model => model.Titulo, new {@class = "form-control"})
    </div>

    <div class="form-group my-2">
        <label asp-for="Descricao">@Html.DisplayNameFor(model => model.Descricao)</label>
        @Html.TextBoxFor(model => model.Descricao, new {@class = "form-control"})
    </div>
        
    <input type="submit" class="btn btn-primary rounded-pill my-3" value="Criar" />
        
</form>