@model Tarefas.Web.Models.Tarefa

<form asp-action="Update">

    <div class="form-group">
        <label asp-for="Titulo">@Html.DisplayNameFor(model => model.Titulo)</label>
        @Html.TextAreaFor(model => model.Titulo, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <label asp-for="Descricao">@Html.DisplayNameFor(model => model.Descricao)</label>
        @Html.TextAreaFor(model => model.Descricao, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <label asp-for="Concluida">@Html.DisplayNameFor(model => model.Concluida)</label>
        @Html.TextAreaFor(model => model.Concluida, new {@class = "form-control"})
    </div>

    <input type="submit" class="btn btn-primary rounded-pill my-3" value="Atualizar">
        
</form>